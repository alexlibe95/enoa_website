---
import { ChevronRight, Award, Users, Calendar, Waves, Sparkles } from 'lucide-astro';

interface Props {
  title?: string;
  subtitle?: string;
  description?: string;
  backgroundImage?: string;
  showStats?: boolean;
}

const { 
  title = "Ελληνικός Ναυτικός Όμιλος Αιγυπτιωτών",
  subtitle = "Από το 1965",
  description = "Κωπηλασία • Ιστιοπλοΐα • Κάνοε Καγιάκ • Κολύμβηση",
  backgroundImage = "/images/slider-home.jpg", // ENOA official hero image
  showStats = true
} = Astro.props;

const stats = [
  { icon: Award, label: "Ολυμπιακές Διακρίσεις", value: "15+" },
  { icon: Users, label: "Ενεργά Μέλη", value: "500+" },
  { icon: Calendar, label: "Χρόνια Λειτουργίας", value: "60+" }
];
---

<section class="relative h-[70vh] flex items-center justify-center bg-cover bg-center bg-no-repeat hero-bg">
  <!-- Modern elegant overlay for better readability and reduced pixelation -->
  <div class="absolute inset-0 bg-gradient-to-r from-slate-900/60 via-slate-900/40 to-slate-900/60"></div>
  
  <!-- Hero content with background image -->
  <div class="relative max-w-5xl mx-auto px-4 sm:px-6 text-center z-10 w-full">
    
    <!-- Modern typography -->
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight drop-shadow-lg">
      {title}
    </h1>

    <!-- Elegant description -->
    <p class="text-lg md:text-xl text-white/90 mb-10 max-w-3xl mx-auto font-medium leading-relaxed drop-shadow">
      {description}
    </p>

    <!-- Modern elegant buttons -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12 w-full max-w-md mx-auto sm:max-w-none">
      <a 
        href="/about"
        class="inline-flex items-center px-6 sm:px-8 py-4 bg-white/90 backdrop-blur-sm text-slate-900 font-semibold rounded-xl hover:bg-white hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl w-full sm:w-auto justify-center"
      >
        <span class="truncate">Μάθετε περισσότερα</span>
        <ChevronRight class="ml-2 h-5 w-5 flex-shrink-0" />
      </a>
      <a 
        href="/contact"
        class="inline-flex items-center px-6 sm:px-8 py-4 border-2 border-white/80 text-white font-semibold rounded-xl hover:bg-white/20 backdrop-blur-sm hover:scale-105 transition-all duration-300 w-full sm:w-auto justify-center"
      >
        <span class="truncate">Επικοινωνία</span>
      </a>
    </div>

    <!-- Elegant stats -->
    {showStats && (
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 sm:gap-8 max-w-4xl mx-auto px-4 mb-8">
        {stats.map((stat) => (
          <div class="text-center">
            <div class="text-2xl sm:text-3xl md:text-4xl font-bold text-white mb-2 drop-shadow-lg">{stat.value}</div>
            <div class="text-white/80 text-xs sm:text-sm font-medium drop-shadow">{stat.label}</div>
          </div>
        ))}
      </div>
    )}

    <!-- Elegant badge moved under stats -->
    <div class="inline-block px-6 py-3 bg-white/90 backdrop-blur-sm text-blue-700 text-sm font-semibold rounded-full shadow-lg">
      {subtitle}
    </div>
  </div>
</section>